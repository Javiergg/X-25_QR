<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="X25Theme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--parent="android:Theme.DeviceDefault.Light.DarkActionBar">-->
        <item name="android:actionBarStyle">@style/X25ActionBar</item>
    </style>

    <style name="X25AdminTheme"
        parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PandoraAdminActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="X25ActionBar"
        parent="android:Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="PandoraAdminActionBar"
        parent="android:Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

</resources>